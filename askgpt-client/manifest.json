{
  "manifest_version": 3,
  "name": "AskGPT - Ghost Mode (Multi-Provider)",
  "version": "3.0",
  "description": "Ask ChatGPT and Gemini (Web & API) directly on webpages.",
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "permissions": [
    "activeTab",
    "tabs",
    "tabCapture",
    "clipboardWrite",
    "scripting",
    "storage",
    "debugger",
    "contextMenus",
    "sidePanel"
  ],
  "host_permissions": [
    "https://chatgpt.com/*",
    "https://gemini.google.com/*",
    "https://generativelanguage.googleapis.com/*",
    "https://unsplash.com/*",
    "https://source.unsplash.com/*",
    "https://images.unsplash.com/*",
    "https://*.wikipedia.org/*",
    "https://www.pinterest.com/*",
    "https://i.pinimg.com/*"
  ],
  "commands": {
    "summarize-page": {
      "suggested_key": {
        "default": "Alt+S",
        "mac": "Alt+S"
      },
      "description": "Summarize the current page"
    },
    "capture-image": {
      "suggested_key": {
        "default": "Alt+A",
        "mac": "Alt+A"
      },
      "description": "Capture a screenshot region for AskGPT"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "48": "icons/icon-48.png"
    },
    "default_popup": "popup.html"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "marked.min.js",
        "prompts.js",
        "src/content/state.js",
        "src/content/extract.js",
        "src/content/layout.js",
        "src/content/modal.js",
        "src/content/chat-client.js",
        "src/content/floating-button.js",
        "src/content/sidepanel-launcher.js",
        "src/content/events.js",
        "src/content/image-capture.js",
        "content.js"
    ],
      "css": [
        "content.css"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "marked.min.js",
        "icons/*.svg",
        "icons/*.png"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
